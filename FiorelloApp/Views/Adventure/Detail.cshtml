@model Adventure

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/assets/img/@Model.Image" class="detail-image" alt="@Model.Name">
        </div>

        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-primary">$@Model.Price</h4>

            <p><strong>Stock:</strong> @Model.AdventureCount ədəd</p>

            <a asp-controller="adventure" asp-action="addbasket" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-shopping-cart"></i> Səbətə əlavə et
            </a>
            <a asp-controller="adventure" asp-action="index">

            <button class="btn-primary btn">Back</button>
            </a>
        </div>
    </div>
</div>

<style>
    .detail-image {
        width: 100%;
        height: 100vh;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }
</style>
