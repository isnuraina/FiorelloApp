@using FiorelloApp.Models
@model IEnumerable<Blog>


@foreach (var blog in Model)
{
    <div class="col-md-6 col-lg-4">
        <div class="item">
            <div class="img position-relative">
                <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.Id">
                    <img src="~/assets/img/@blog.ImageUrl" class="img-fluid" alt="">
                </a>
                <div class="date rounded bg-light position-absolute py-1 px-2">
                    <span>@blog.CreatedDate?.ToString("dd.MM.yyyy")</span>
                </div>
            </div>
            <div class="text mt-3 text-center px-5">
                <a class="text-decoration-none text-dark" asp-controller="blog" asp-action="detail" asp-route-id="@blog.Id">
                    <h5>@blog.Title</h5>
                </a>
                <p class="text-black-50">@blog.Description</p>
            </div>
        </div>
    </div>
}

